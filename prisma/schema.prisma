generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  img String?
  fullname String?
  bio String?
  password String
  experiences Experience[]
  academics Academics[]
  projects Project[]
  blogs Blog[]
}

model Academics {
  id Int @id @default(autoincrement())
  level String?
  degree String?
  school String?
  address String?
  academicYear String?
  current Boolean @default(false)
  userId Int
  user User @relation(fields: [userId], references: [id])
}

model Experience {
  id Int @id @default(autoincrement())
  title String
  description String?
  current Boolean @default(false)
  userId Int
  user User @relation(fields: [userId], references: [id])
}

model Project {
  id Int @id @default(autoincrement())
  img String
  title String
  description String
  userId Int
  user User @relation(fields: [userId], references: [id])
}

model Blog {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId Int
  published Boolean  @default(false)
  user User @relation(fields: [userId], references: [id])
}
